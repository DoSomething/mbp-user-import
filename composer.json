{
  "name": "mbp-user-import",
  "type": "project",
  "version": "0.3.2",
  "description": "A producer app for the Message Broker system that imports users from niche.com that have expressed an interest in DoSomething scholorships.",
  "keywords": ["message broker"],
  "homepage": "https://github.com/DoSomething/mbp-user-import",
  "license" : "MIT",
  "authors": [
    {
      "name": "DoSomething and contributors",
      "homepage": "http://www.dosomething.org"
    }
  ],
  "require": {
    "php": ">= 5.3.0",
    "DoSomething/messagebroker-phplib": "0.2.*",
    "ddeboer/imap": "0.5.*",
    "dosomething/mb-toolbox": "0.10.*",
    "dosomething/stathat": "1.*"
  },
  "require-dev": {
    "phpunit/phpunit": "4.4.*",
    "squizlabs/php_codesniffer": "2.*"
  },
  "autoload": {
    "psr-4": {
      "DoSomething\\MBP_UserImport\\": "src/"
    }
  },
  "scripts": {
    "pre-install-cmd": [
      "./bin/install.sh"
    ],
    "pre-package-update": [
      "git checkout master",
      "git pull"
    ],
    "post-package-update": [
      "./vendor/bin/phpunit tests"
    ],
    "post-package-uninstall": [
      "./bin/uninstall.sh"
    ]
  }
}
